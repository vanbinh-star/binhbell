@using api.Models.QLKHCanBo
@inject DialogService DialogService

<h4>📋 Danh sách đề tài theo tiến độ</h4>

<RadzenDataGrid Data="@DanhSach"
                TItem="tbDeTaiKHCanBo"
                AllowPaging="true"
                PageSize="10"
                Responsive="true"
                AllowFiltering="true"
                AllowSorting="true"
                Style="margin-top:10px">

    <Columns>
        <RadzenDataGridColumn Property="MaSo"
                              Title="Mã số"
                              Width="120px" />

        <RadzenDataGridColumn Property="TenDeTai"
                              Title="Tên đề tài" />

        <RadzenDataGridColumn Property="NamHoc"
                              Title="Năm học"
                              Width="120px" />

        <RadzenDataGridColumn Property="DonViChuTri"
                              Title="Đơn vị chủ trì" />

        <RadzenDataGridColumn Property="LoaiDeTai"
                              Title="Loại đề tài"
                              Width="150px" />

        <RadzenDataGridColumn Property="XepLoai"
                              Title="Xếp loại"
                              Width="120px" />
    </Columns>

</RadzenDataGrid>

<div class="text-end mt-3">
    <RadzenButton Text="Đóng"
                  Icon="close"
                  ButtonStyle="ButtonStyle.Secondary"
                  Click="@(() => DialogService.Close())" />
</div>

@code {
    // =========================
    // DATA TRUYỀN TỪ DIALOG
    // =========================
    [Parameter]
    public List<tbDeTaiKHCanBo> DanhSach { get; set; } = new();
}
